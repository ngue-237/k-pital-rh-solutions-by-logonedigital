<div class="modal fade" id="modalEmail" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content p-2">
            <form class="form-style-3" method="post" action="{{ path('app_account_change_email') }}">
            <div class="modal-header">
                <h6>Modifier de l'adresse email pour {{ app.user.email }}</h6>
                <a type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
            </div>
            <div class="modal-body p-3">
                    <input type="email" placeholder="Nouvelle adresse email" name="email" required>
                    <input type="password" placeholder="Mot de passe actuel" name="password" required>
            </div>
            <div class="modal-footer">
                <a type="button" class="button button-radius text-bg-danger" data-dismiss="modal">Fermer</a>
                <button type="submit" class="button button-xs button-radius button-outline-dark-2">Enregistrer</button>
            </div>
            </form>
        </div>
    </div>
</div>
