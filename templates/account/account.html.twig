<!-- Services section -->
<div class="section padding-top-0">
  <div class="container">
    <div class="row icon-5xl g-4 text-center">
      <div class="col-12 col-md-6 col-lg-4">
        <div class="border-all border-radius padding-40 hover-shadow">
          <i class="far fa-user-circle text-dark"></i>
          <h5 class="fw-normal margin-top-10">Informations personnels</h5>
          <p>
            Les paramétres de votre compte K-Pital RH
          </p>
          <a
            class="button-text-2 margin-top-20"
            href="{{ path('app_account_setting') }}"
            >Modifier</a
          >
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="border-all border-radius padding-40 hover-shadow">
          <i class="far fa-address-card text-dark"></i>
          <h5 class="fw-normal margin-top-10">Compléter mon profil</h5>
          <p>
            Les informations sur votre profil
          </p>
          <a
            class="button-text-2 margin-top-20"
            href="{{ path('app_account_resume') }}"
            >Voir plus</a
          >
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="border-all border-radius padding-40 hover-shadow">
          <i class="far fa-paper-plane text-dark"></i>
          <h5 class="fw-normal margin-top-10">Mes demandes</h5>
          <p>Toutes vos demandes d'emplois</p>
          <a
            class="button-text-2 margin-top-20"
            href="{{ path('app_candidature') }}"
            >Voir plus</a
          >
        </div>
      </div>
    </div>
