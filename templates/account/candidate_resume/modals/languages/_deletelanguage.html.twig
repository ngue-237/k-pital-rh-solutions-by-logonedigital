<a href="#" data-toggle="modal" data-target="#deleteLanguage" ><i class="bi bi-trash3 text-danger icon-margin"></i></a>
<div class="modal fade" id="deleteLanguage" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content p-2">
            <form class="form-style-5" method="post" action="{{ path('app_profil_delete_language',{'id':language.id}) }}" autocomplete="on">
                <div class="modal-header">
                    <h6>⚠️Confirmation de suppresion</h6>
                    <a type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </a>
                </div>
                <div class="modal-body p-3">
                    <h5>Voulez-vous vraiment supprimer la langue: {{ language.name }}</h5>
                </div>
                <div class="modal-footer">
                    <a type="button" class="button button-radius text-bg-danger" data-dismiss="modal">Annuler</a>
                    <input type="hidden" name="token" value="{{ csrf_token('delete-language') }}"/>
                    <button type="submit" class="button button-xs button-radius button-outline-dark-2">Oui, Je confirme</button>
                </div>
            </form>
        </div>
    </div>
</div>