<a class="button-text-1" href="" data-toggle="modal" data-target="#addSkill" >Ajouter</a>
<div class="modal fade" id="addSkill" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content p-2">
            <form class="form-style-5" method="post" action="{{ path('app_profil_add_skill') }}" autocomplete="on">
                <div class="modal-header">
                    <h6>Ajout d'une compétence</h6>
                    <a type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </a>
                </div>
                <div class="modal-body p-3">
                    <div class="row g-4 m-2">
                            <input type="text" name="skillTitle" placeholder="Titre de la compétence" autocomplete="on" required>
                            <select class="custom-select w-100" name="skillLevel" required>
                                <option value="1" selected>Niveau novice</option>
                                <option value="2">Débutant</option>
                                <option value="3">Avancé</option>
                                <option value="4">Compétent</option>
                                <option value="5">Expert</option>
                            </select>
                            <textarea name="skillDesc" maxlength="300" placeholder="Entrez une description de cette compétence ...." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <a type="button" class="button button-radius text-bg-danger" data-dismiss="modal">Fermer</a>
                    <input type="hidden" name="token" value="{{ csrf_token('add-skill') }}"/>
                    <button type="submit" class="button button-xs button-radius button-outline-dark-2">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
</div>
