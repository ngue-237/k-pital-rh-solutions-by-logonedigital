{% extends "base.html.twig" %} {% block body %}

<!-- Custom Cursor -->
<div id="cursor"></div>
<!-- end Custom Cursor -->

<!-- Header -->
{{ include("./includes/navbar.html.twig") }}
<!-- end Header -->

<!-- Hero section -->
<div class="section-xs bg-grey-lighter" style="margin-bottom: -50px">
  <div class="container text-center">
    <h3 class="font-family-secondary">Trouvez le job de vos rêves</h3>
  </div>
</div>
<!-- end Hero section -->

<!-- Job Listings section -->
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-3 col-lg-3 col-xl-3 col-xxl-3">
        <div class="form-style-3">
          <div class="row">
            <input
              class="form-control mr-sm-2"
              type="search"
              id="search"
              placeholder="rechercher"
              aria-label="Search"
            />
          </div>
          <div class="row">
            <div class="col-12 col-lg-12">
              <h4 class="uppercase">Filtres Avancés</h4>
            </div>
          </div>
          <div class="row">
            <form id="filters">
              <div class="col-12 col-lg-12" id="checkboxFiltres">
                <h6>Secteur d'activiter</h6>
                {% for categoryJob in categoriesJob %}
                <div class="row">
                  <div class="col-12 col-lg-2">
                    <input
                      id="cat{{ categoryJob.id }}"
                      name="categories[]"
                      type="checkbox"
                      value="{{ categoryJob.id }}"
                    />
                  </div>
                  <div class="col-12 col-lg-10">
                    <label for="cat{{ categoryJob.id }}">{{
                      categoryJob.designation | upper
                    }}</label>
                  </div>
                </div>
                {% endfor %}
              </div>
            </form>
          </div>
          <div class="row">
            <div class="col-12 col-lg-12">
              <div class="col-12 col-lg-12">
                <h6>Villes</h6>
              </div>
              <div class="row">
                <div class="col-12 col-lg-12">
                  <select class="custom-select w-100 custom-select-sm">
                    <option selected>Choisir une ville</option>
                    {% for adresse in adresses %}
                    <option value="1">{{ adresse.city }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="all" class="col-12 col-sm-9 col-lg-9 col-xl-9 col-xxl-9">
        {{ include("./job_template/jobsList.html.twig") }}
      </div>
      <nav>
        {{ knp_pagination_render(jobs, "pagination.html.twig") }}
      </nav>
    </div>
    <!-- Job Listing 1 -->
  </div>
  <!-- end container -->
</div>
<!-- end Job Listings section -->

{{ include("./includes/footer.html.twig") }}

<!-- Scroll to top button -->
<div class="scrolltotop">
  <a class="button-circle button-circle-sm button-circle-dark" href="#"
    ><i class="bi bi-arrow-up"></i
  ></a>
</div>
<!-- end Scroll to top button -->

