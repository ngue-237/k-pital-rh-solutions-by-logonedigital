<!-- Contact section -->
<div class="section">
  <div class="container">
    <div class="row g-4">
      <div class="col-12 col-md-4">
        <div class="margin-bottom-30">
          <h6 class="fw-normal margin-0">Téléphone:</h6>
          <p>+(237) 693 275 906</p>
          <p>+(237) 678 691 577</p>
        </div>
        <div class="margin-bottom-30">
          <h6 class="fw-normal margin-0">Email:</h6>
          <p>contact@capitalrhsolutions.com</p>
        </div>
        <div>
          <h6 class="fw-normal margin-0">Adresse:</h6>
          <p>B.P 4014 Douala</p>
        </div>
      </div>
      <div class="col-12 col-md-8">
        <div class="contact-form text-md-end">
          {{ form_start(form) }}
          <div class="row gx-3 gy-0">
            <div class="col-12 col-sm-6">
              {{
                form_row(form.name, {
                  label: false,
                  attr: {
                    placeholder: "Nom complet"
                  }
                })
              }}
            </div>
            <div class="col-12 col-sm-6">
              {{
                form_row(form.email, {
                  label: false,
                  attr: {
                    placeholder: "Email"
                  }
                })
              }}
            </div>
          </div>
          {{
            form_row(form.subject, {
              label: false,
              attr: {
                id: "subject",
                placeholder: "Quel est l'object de votre demande ?"
              }
            })
          }}
          {{
            form_row(form.message, {
              label: false,
              attr: {
                placeholder: "Comment pouvons-nous vous aider ?",
                id: "message"
              }
            })
          }}
          <div class="form-check">
            {{
              form_row(form.agreeTerm, {
                attr: {
                  class: "form-check-input",
                  id: "defaultCheck1"
                }
              })
            }}
            <label
              style="position: relative; left: -340px"
              class="form-check-label"
              for="defaultCheck1"
            >
              J'accepte les
              <a class="fw-bold" href="{{ path('app_cgu') }}"
                >condition générales d'utilisations</a
              >
            </label>
          </div>
          <button
            class="button button-lg button-radius button-outline-dark-2"
            type="submit"
          >
            Send Message
          </button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
    <!-- end row -->
  </div>
  <!-- end container -->
</div>
<!-- end Contact section -->

{{ include("./includes/footer.html.twig") }}
